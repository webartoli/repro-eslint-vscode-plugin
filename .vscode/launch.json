    "version": "0.2.0",
    "configurations": [
        {
            "command": "yarn dev",
            "name": "Server: debug",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}/server"
        },
        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "PWA: Attach Chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/client"
        },
        {
            "type": "pwa-msedge",
            "request": "launch",
            "name": "PWA: Attach Edge",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/client"
        }
    ]
}